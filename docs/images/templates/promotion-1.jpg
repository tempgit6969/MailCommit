<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200" fill="none">
  <!-- Background -->
  <rect width="300" height="200" fill="#F0F4FF" />
  
  <!-- Email template preview -->
  <rect x="50" y="20" width="200" height="160" rx="4" fill="white" stroke="#4A6CF7" stroke-width="1" />
  
  <!-- Header with logo -->
  <rect x="50" y="20" width="200" height="40" rx="4" fill="#4A6CF7" />
  <circle cx="70" cy="40" r="10" fill="white" />
  <rect x="90" y="35" width="80" height="10" rx="5" fill="white" />
  
  <!-- Large promotion banner -->
  <rect x="60" y="70" width="180" height="60" rx="4" fill="#E0E8FF" />
  <rect x="80" y="80" width="140" height="20" rx="4" fill="#4A6CF7" opacity="0.7" />
  <rect x="100" y="105" width="100" height="15" rx="7.5" fill="#4A6CF7" />
  <rect x="115" y="107.5" width="70" height="10" rx="5" fill="white" />
  
  <!-- Product grid -->
  <rect x="60" y="140" width="55" height="30" rx="2" fill="#E0E8FF" />
  <rect x="122.5" y="140" width="55" height="30" rx="2" fill="#E0E8FF" />
  <rect x="185" y="140" width="55" height="30" rx="2" fill="#E0E8FF" />
  
  <!-- Promotion label -->
  <rect x="0" y="0" width="100" height="30" rx="0 0 15 0" fill="#4A6CF7" />
  <text x="10" y="20" font-family="Arial" font-size="12" fill="white">PROMOTION</text>
  
  <!-- Sale badge -->
  <circle cx="230" cy="50" r="20" fill="#FF6B6B" />
  <text x="215" y="55" font-family="Arial" font-size="12" font-weight="bold" fill="white">SALE</text>
</svg>