<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200" fill="none">
  <!-- Background -->
  <rect width="300" height="200" fill="#F0F4FF" />
  
  <!-- Email template preview -->
  <rect x="50" y="20" width="200" height="160" rx="4" fill="white" stroke="#4A6CF7" stroke-width="1" />
  
  <!-- Header -->
  <rect x="50" y="20" width="200" height="30" rx="4" fill="#4A6CF7" />
  <circle cx="65" cy="35" r="8" fill="white" />
  <rect x="80" y="30" width="60" height="10" rx="5" fill="white" />
  <rect x="200" y="30" width="40" height="10" rx="5" fill="white" opacity="0.7" />
  
  <!-- Two column layout -->
  <rect x="60" y="60" width="80" height="60" rx="2" fill="#E0E8FF" />
  <rect x="150" y="60" width="90" height="10" rx="2" fill="#E0E8FF" />
  <rect x="150" y="75" width="70" height="8" rx="2" fill="#E0E8FF" />
  <rect x="150" y="88" width="80" height="8" rx="2" fill="#E0E8FF" />
  <rect x="150" y="101" width="60" height="8" rx="2" fill="#E0E8FF" />
  
  <!-- Second row -->
  <rect x="60" y="130" width="90" height="10" rx="2" fill="#E0E8FF" />
  <rect x="60" y="145" width="70" height="8" rx="2" fill="#E0E8FF" />
  <rect x="60" y="158" width="80" height="8" rx="2" fill="#E0E8FF" />
  <rect x="150" y="130" width="80" height="40" rx="2" fill="#E0E8FF" />
  
  <!-- Newsletter label -->
  <rect x="0" y="0" width="100" height="30" rx="0 0 15 0" fill="#4A6CF7" />
  <text x="10" y="20" font-family="Arial" font-size="12" fill="white">NEWSLETTER</text>
</svg>