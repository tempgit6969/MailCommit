<svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" viewBox="0 0 300 200" fill="none">
  <!-- Background -->
  <rect width="300" height="200" fill="#F0F4FF" />
  
  <!-- Email template preview -->
  <rect x="50" y="20" width="200" height="160" rx="4" fill="white" stroke="#4A6CF7" stroke-width="1" />
  
  <!-- Header -->
  <rect x="50" y="20" width="200" height="30" rx="4" fill="#4A6CF7" />
  <circle cx="65" cy="35" r="8" fill="white" />
  <rect x="80" y="30" width="60" height="10" rx="5" fill="white" />
  
  <!-- Product showcase -->
  <rect x="60" y="60" width="80" height="80" rx="4" fill="#E0E8FF" />
  <circle cx="100" cy="100" r="25" fill="#4A6CF7" opacity="0.3" />
  
  <!-- Product info -->
  <rect x="150" y="60" width="90" height="15" rx="2" fill="#4A6CF7" opacity="0.7" />
  <rect x="150" y="80" width="70" height="10" rx="2" fill="#E0E8FF" />
  <rect x="150" y="95" width="80" height="10" rx="2" fill="#E0E8FF" />
  
  <!-- Price -->
  <rect x="150" y="115" width="40" height="15" rx="2" fill="#FF6B6B" />
  <rect x="155" y="117.5" width="30" height="10" rx="5" fill="white" />
  
  <!-- CTA Button -->
  <rect x="60" y="150" width="180" height="20" rx="10" fill="#4A6CF7" />
  <rect x="110" y="155" width="80" height="10" rx="5" fill="white" />
  
  <!-- Promotion label -->
  <rect x="0" y="0" width="100" height="30" rx="0 0 15 0" fill="#4A6CF7" />
  <text x="10" y="20" font-family="Arial" font-size="12" fill="white">PROMOTION</text>
  
  <!-- New product badge -->
  <rect x="60" y="60" width="40" height="20" rx="10" fill="#4A6CF7" />
  <text x="70" y="75" font-family="Arial" font-size="10" fill="white">NEW</text>
</svg>